<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			x:Class="ESBevents.Views.MainPage" 
	Title="ESB Eventlogs">
	
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style x:Key="buttonStyle" TargetType="Button">
				<Setter Property="HorizontalOptions" Value="End" />
				<Setter Property="VerticalOptions" Value="Center" />
				<Setter Property="TextColor" Value="White" />
				<Setter Property="BackgroundColor" Value="#bddec3" />
				<Setter Property="BorderRadius" Value="10" />
				<Setter Property="HeightRequest" Value="400" />
				<Setter Property="WidthRequest" Value="200" />
				<Setter Property="FontAttributes" Value="Bold" />
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	
	<ContentPage.ToolbarItems>
		<ToolbarItem Icon="ic_drawer.png" Activated="OnClick" />
        
	</ContentPage.ToolbarItems>
	   <ContentPage.Content>
        <ListView x:Name="customerList" RowHeight="90"
                    ItemsSource="{Binding Customer}"
                    SelectedItem="{Binding SelectedItem}" >
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" >
                            <Image Source="{Binding Logo}" 
                                    WidthRequest="80" HeightRequest="80"
                                    VerticalOptions="Start" 
                                    HorizontalOptions="Start" />
                            
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Name}" FontSize="10"/>
                                <Label Text="{Binding IPNumber}" FontSize="11"/>
                                <Label Text="{Binding PortNumber}" FontSize="11" LineBreakMode="TailTruncation"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>