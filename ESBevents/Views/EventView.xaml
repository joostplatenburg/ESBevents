<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ESBevents.EventView">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style x:Key="buttonStyle" TargetType="Button">
				<Setter Property="HorizontalOptions" Value="End" />
				<Setter Property="VerticalOptions" Value="Center" />
				<Setter Property="TextColor" Value="White" />
				<Setter Property="BackgroundColor" Value="#bddec3" />
				<Setter Property="BorderRadius" Value="10" />
				<Setter Property="HeightRequest" Value="400" />
				<Setter Property="WidthRequest" Value="200" />
				<Setter Property="FontAttributes" Value="Bold" />
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	
	<ContentPage.ToolbarItems>
		<ToolbarItem Icon="ic_drawer.png" Activated="OnClick" />
	</ContentPage.ToolbarItems>
	
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" Margin="20">
            <StackLayout Orientation="Horizontal">
			    <Label Text="Time Logged:" FontSize="12" TextColor="Red" WidthRequest="100"/>
			    <Label Text="{Binding TimeLogged}" FontSize="10"/>
            </StackLayout>
            
            <StackLayout Orientation="Horizontal">
    			<Label Text="Source Class:" FontSize="12" TextColor="Red" WidthRequest="100"/>
    			<Label Text="{Binding SourceClass}" FontSize="10"/>
            </StackLayout>
            
            <StackLayout Orientation="Horizontal">
    			<Label Text="Source Method:" FontSize="12" TextColor="Red" WidthRequest="100"/>
    			<Label Text="{Binding SourceMethod}" FontSize="10"/>
            </StackLayout>
            
            <StackLayout Orientation="Horizontal">
    			<Label Text="Config Name:" FontSize="12" TextColor="Red" WidthRequest="100"/>
    			<Label Text="{Binding ConfigName}" FontSize="10"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
    			<Label Text="Type:" FontSize="12" TextColor="Red" WidthRequest="100"/>
    			<Label Text="{Binding Type}" FontSize="10"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
    			<Label Text="Session ID:" FontSize="12" TextColor="Red" WidthRequest="100"/>
    			<Label Text="{Binding SessionId}" FontSize="10"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
    			<Label Text="Job:" FontSize="12" TextColor="Red" WidthRequest="100"/>
    			<Label Text="{Binding Job}" FontSize="10"/>
            </StackLayout>
            
            <StackLayout Orientation="Horizontal">
    			<Label Text="Message ID:" FontSize="12" TextColor="Red" WidthRequest="100"/>
    			<Label Text="{Binding MessageId}" FontSize="10"/>
            </StackLayout>

			<Label Text="Text:" FontSize="12" TextColor="Red" WidthRequest="100"/>
			<Label Text="{Binding Text}" FontSize="10"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
